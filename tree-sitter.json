{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "epics_db",
      "path": ".",
      "scope": "source.epics-db",
      "file-types": [
        "dbd",
        "db",
        "template",
        "vdb"
      ],
      "injection-regex": "^(epics-)?dbd?$",
      "highlights": "queries/highlights.scm",
      "injections": "queries/injections.scm"
    }
  ],
  "metadata": {
    "links": {
      "repository": "https://github.com/tree-sitter-grammars/tree-sitter-epics-db"
    },
    "version": "0.1.2",
    "license": "MIT",
    "description": "Grammar for EPICS' database and database definition files",
    "authors": [
      {
        "name": "RÃ©mi NICOLE",
        "email": "remi.nicole@cea.fr"
      }
    ]
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true
  }
}
